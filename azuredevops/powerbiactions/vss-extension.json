{
  "manifestVersion": 1,
  "id": "maikvandergaag-power-bi-actions",
  "name": "Power BI Actions",
  "version": "3.0.0",
  "publisher": "maikvandergaag",
  "description": "Build and Release Management tasks for PowerBI.",
  "public": true,
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "images/icon.png"
  },
  "categories": [
    "Azure Pipelines"
  ],
  "tags": [
    "Release",
    "Build",
    "PowerBI",
    "Power BI",
    "pbix",
    "DirectQuery",
    "Dataset",
    "3fifty"
  ],
  "screenshots": [
    {
        "path": "images/screenshot-1.png"
    },
    {
        "path": "images/screenshot-2.png"
    }
  ],
  "content": {
    "license": {
      "path": "license.md"
    },
    "details": {
      "path": "readme.md"
    }
  },
  "links": {
    "getstarted": {
      "uri": "https://github.com/MaikvanderGaag/msft-extensions/wiki"
    },
    "repository": {
      "uri": "https://github.com/MaikvanderGaag/msft-extensions/"
    },
    "issues": {
      "uri": "https://github.com/MaikvanderGaag/msft-extensions/issues"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/MaikvanderGaag/msft-extensions/tree/master/extensions/powerbiactions"
  },
  "branding": {
    "color": "rgb(0, 171, 236)",
    "theme": "light"
  },
  "contributions": [
    {
      "id": "PowerBIActions",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "PowerBIActions"
      }
    },
    {
      "id": "powerbi-endpoint-type",
      "description": "Power BI Service Endpoint",
      "type": "ms.vss-endpoint.service-endpoint-type",
      "targets": [ "ms.vss-endpoint.endpoint-types" ],
      "properties": {
          "name": "PowerBI",
          "displayName": "Power BI",
          "url": {
            "displayName": "Power BI Api Url",
            "value": "https://api.powerbi.com/v1.0",
            "isVisible": "false"
          },
          "inputDescriptors": [
              {
                  "id": "clientId",
                  "name": "ClientId",
                  "description": "The client id of the native application",
                  "inputMode": "textbox",
                  "isConfidential": false,
                  "validation": {
                      "isRequired": false,
                      "dataType": "string",
                      "maxLength": 300
                  }
              }
          ],
          "authenticationSchemes": [
              {
                  "type": "ms.vss-endpoint.endpoint-auth-scheme-basic",
                  "displayName": "Credentials",
                  "inputDescriptors": [
                      {
                          "id": "username",
                          "name": "Username",
                          "description": "Specify a work or school account. Multi-Factor authentication can not be enabled on this account.",
                          "inputMode": "textbox",
                          "isConfidential": false,
                          "validation": {
                              "isRequired": true,
                              "dataType": "string",
                              "maxLength": 300
                          }
                      }
                  ]
              }
          ],
          "helpMarkDown": "",
          "icon": "images/connection-icon.png"
      }
  }
  ],
  "files": [
    {
      "path": "powerbiactions"
    }
  ]
}